# Frontend Environment Variables

# Helius API Configuration (for direct blockchain polling)
VITE_HELIUS_API_KEY=your-helius-api-key-here
VITE_HELIUS_API_BASE=https://api.helius.xyz
VITE_HELIUS_POLL_MS=10000
VITE_HELIUS_TX_LIMIT=100

# Backend API Configuration (for production)
VITE_BACKEND_API_URL=http://localhost:3001
VITE_BACKEND_WS_URL=ws://localhost:3001/api/stream/kol-buys

# Data Mode
# Set to "true" to use Helius API directly (frontend polling)
# Set to "backend" to use backend service (recommended for production)
# Leave empty or "false" to use mock data
VITE_USE_HELIUS=false
VITE_USE_BACKEND=true
